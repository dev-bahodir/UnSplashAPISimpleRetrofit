<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tab_text"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:text="Nature"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tab_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/tab_back"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/back"
        app:layout_constraintTop_toBottomOf="@id/tab_text"
        app:layout_constraintLeft_toLeftOf="@id/tab_text"
        app:layout_constraintRight_toRightOf="@id/tab_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="8dp"
        android:layout_height="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>